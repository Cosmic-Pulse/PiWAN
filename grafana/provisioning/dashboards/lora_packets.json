{
  "id": null,
  "uid": "lorawan-packets",
  "title": "LoRaWAN Packet Monitor",
  "tags": ["lorawan", "packets"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "RSSI Over Time",
      "datasource": "InfluxDB",
      "targets": [
        {
          "measurement": "lorawan_packets",
          "select": [
            [ { "type": "field", "params": ["rssi"] }, { "type": "mean", "params": [] } ]
          ],
          "groupBy": [
            { "type": "time", "params": ["$__interval"] }
          ],
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "SNR Over Time",
      "datasource": "InfluxDB",
      "targets": [
        {
          "measurement": "lorawan_packets",
          "select": [
            [ { "type": "field", "params": ["snr"] }, { "type": "mean", "params": [] } ]
          ],
          "groupBy": [
            { "type": "time", "params": ["$__interval"] }
          ],
          "refId": "B"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "table",
      "title": "Devices Seen",
      "datasource": "InfluxDB",
      "targets": [
        {
          "measurement": "lorawan_packets",
          "select": [
            [ { "type": "field", "params": ["device_id"] } ]
          ],
          "groupBy": [
            { "type": "tag", "params": ["device_id"] }
          ],
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 9, "w": 24, "h": 8 }
    }
  ]
}